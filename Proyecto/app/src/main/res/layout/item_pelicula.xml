<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_pelicula"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <ImageView
        android:id="@+id/Iv_pelicula_portada"
        android:layout_width="160dp"
        android:layout_height="197dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pl_p_black_widow" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="23dp"
        android:layout_height="25dp"

        app:layout_constraintEnd_toEndOf="@+id/Iv_pelicula_portada"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/Iv_pelicula_portada"
        app:layout_constraintTop_toTopOf="@+id/Iv_pelicula_portada"
        app:srcCompat="@drawable/ic_baseline_star_rate_24"
        app:tint="@color/verde" />

    <TextView
        android:textColor="@color/verde"
        android:id="@+id/Tv_calificacion_pelicula"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Iv_pelicula_portada"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="@+id/Iv_pelicula_portada"
        app:layout_constraintTop_toTopOf="@+id/Iv_pelicula_portada" />


</androidx.constraintlayout.widget.ConstraintLayout>