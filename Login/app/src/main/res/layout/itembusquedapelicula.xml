<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/separador" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bpimagen"
        android:layout_width="107dp"
        android:layout_height="146dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@drawable/pl_p_interstellar" />

    <TextView
        android:id="@+id/bptvtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bpimagen"
        app:layout_constraintStart_toEndOf="@+id/bpimagen"
        app:layout_constraintTop_toTopOf="@+id/bpimagen"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/bptvcalificacion"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/verde"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bptvtitulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bptvtitulo"
        app:layout_constraintTop_toBottomOf="@+id/bptvtitulo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="/10"
        android:textColor="#A4A4A4"
        app:layout_constraintStart_toEndOf="@+id/bptvcalificacion"
        app:layout_constraintTop_toBottomOf="@+id/bptvtitulo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_star_rate_24"
        app:tint="@color/verde" />

    <TextView
        android:id="@+id/tv_anio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_clasifcacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_anio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_anio"
        app:layout_constraintTop_toBottomOf="@+id/tv_anio" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_clasifcacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_clasifcacion"
        app:layout_constraintTop_toBottomOf="@+id/tv_clasifcacion" />

    <Button
        android:id="@+id/tbpBtanadir"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:outlineSpotShadowColor="@color/white"
        android:text="AÃ±adir"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/bpimagen"
        app:strokeColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>