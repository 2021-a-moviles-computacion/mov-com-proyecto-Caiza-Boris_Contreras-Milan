<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesion"
    android:background="@color/black">

    <Button
        android:id="@+id/aiccrearCuenta"
        android:layout_width="222dp"
        android:layout_height="65dp"
        android:backgroundTint="#01DF3A"
        android:text="INICIAR SESIÓN"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aicetcontraseña"
        app:layout_constraintVertical_bias="0.215" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="106dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/aicetusuario"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/redondeado"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <EditText
        android:id="@+id/aicetcontraseña"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/redondeado"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/aicetusuario"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="@+id/aicetusuario"
        app:layout_constraintTop_toBottomOf="@+id/aicetusuario" />




</androidx.constraintlayout.widget.ConstraintLayout>